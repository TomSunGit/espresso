{
  "name": "espresso-func",
  "version": "1.0.0",
  "description": "A project to control my espresso machine with a raspberry pi",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build && func extensions install",
    "start:host": "func start",
    "start": "npm run start:host & npm run watch",
    "build:production": "npm run prestart && npm prune --production",
    "test": "jest",
    "lint": "eslint --ext .ts,.js ."
  },
  "author": "Stefan Schoof",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/StefanSchoof/espresso.git"
  },
  "devDependencies": {
    "@azure/functions": "^1.0.1-beta2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "azure-functions-core-tools": "^2.4.401",
    "babel-jest": "^24.1.0",
    "eslint": "^5.13.0",
    "jest": "^24.1.0",
    "jest-junit": "^6.2.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "azure-iothub": "^1.9.3"
  }
}
